# ===== –ú–ï–ù–Æ =====
def main_menu():
    return InlineKeyboardMarkup(inline_keyboard=[
        [InlineKeyboardButton(text="üìã –í—ã–±—Ä–∞—Ç—å –ø–æ–µ–∑–¥", callback_data="menu")],
        [InlineKeyboardButton(text="‚ö° –í–∏–¥—ã —ç–ª–µ–∫—Ç—Ä–æ –æ–±–æ—Ä—É–¥–æ–≤–∞–Ω–∏—è", callback_data="electro")],
        [InlineKeyboardButton(text="üö∑ –í–∏–¥—ã –∑–∞—Ü–µ–ø–∏–Ω–≥–∞", callback_data="hooking")],
        [InlineKeyboardButton(text="üöá –ú–¶–î", callback_data="mcd")]
    ])

