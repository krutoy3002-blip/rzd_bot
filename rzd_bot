# ===== –ú–¶–î / –ú–¶–ö =====
def mcd_menu():
    return InlineKeyboardMarkup(
        inline_keyboard=[
            [
                InlineKeyboardButton(text="–ú–¶–î-1", callback_data="mcd1"),
                InlineKeyboardButton(text="–ú–¶–î-2", callback_data="mcd2")
            ],
            [
                InlineKeyboardButton(text="–ú–¶–î-3", callback_data="mcd3"),
                InlineKeyboardButton(text="–ú–¶–î-4", callback_data="mcd4")
            ],
            [
                InlineKeyboardButton(text="–ú–¶–î-5", callback_data="mcd5"),
                InlineKeyboardButton(text="–ú–¶–ö", callback_data="mcc")
            ]
        ]
    )

# ===== START =====
@dp.message(CommandStart())
async def start(message: types.Message):
    await message.answer(
        "üöÜ –ë–æ—Ç –ø—Ä–æ –ø–æ–µ–∑–¥–∞ –†–ñ–î",
        reply_markup=main_menu()
    )

# ===== CALLBACK =====
@dp.callback_query()
async def callbacks(call: types.CallbackQuery):
    data = call.data

    # --- –ü–û–ï–ó–î–ê ---
    if data == "menu":
        await call.message.answer("üìã –í—ã–±–µ—Ä–∏ –ø–æ–µ–∑–¥:", reply_markup=trains_menu())

    elif data in TRAINS:
        train = TRAINS[data]
        await call.message.answer_photo(
            photo=FSInputFile(train["photo"]),
            caption=train["text"],
            reply_markup=main_menu()
        )

    # --- –≠–õ–ï–ö–¢–†–û ---
    elif data == "electro":
        await call.message.answer(
            "‚ö° –í—ã–±–µ—Ä–∏ –≤–∏–¥ —Ç–æ–∫–∞:",
            reply_markup=electro_menu()
        )

    elif data == "dc":
        await call.message.answer_photo(
            photo=FSInputFile("images/–ø–æ—Å—Ç–æ—è–Ω–Ω—ã–π.jpg"),
